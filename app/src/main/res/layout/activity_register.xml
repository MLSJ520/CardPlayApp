<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.myapplication.RegisterActivity">
    <ImageButton
        android:id="@+id/btn_rback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon"/>

    <TextView
        android:id="@+id/label_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录"
        android:textSize="25sp"
        android:layout_alignBottom="@id/btn_rback"
        android:layout_toRightOf="@id/btn_rback"
        />
    <LinearLayout
        android:id="@+id/yzm_part"
        android:layout_width="@dimen/login_text"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >
        <EditText
            android:id="@+id/edit_yzm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="@string/input_yzm"/>
        <Button
            android:id="@+id/btn_yzm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:textSize="15sp"
            />
    </LinearLayout>
    <EditText
         android:id="@+id/edit_phone"
         android:layout_width="@dimen/login_text"
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
         android:layout_alignLeft="@id/yzm_part"
         android:layout_above="@id/yzm_part"
         android:hint="@string/input_phone"/>
    <EditText
        android:id="@+id/edit_pwd"
        android:layout_width="@dimen/login_text"
        android:layout_height="wrap_content"
        android:layout_below="@id/yzm_part"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword"
        android:hint="@string/input_pwd"/>
    <Button
        android:id="@+id/btn_go"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/edit_pwd"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_style"
        android:layout_marginTop="20dp"
        android:text="确定"

        />
</RelativeLayout>
