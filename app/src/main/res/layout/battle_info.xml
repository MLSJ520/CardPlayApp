<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_battle_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/text_battle_win"
        android:layout_width="wrap_content"
        android:layout_below="@id/text_battle_all"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/text_battle_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_battle_win"
        android:layout_marginBottom="10dp"
        />
   <!-- <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_battle_rate"
        />-->
    <Switch
        android:id="@+id/record_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_battle_rate"
        android:textOff="隐藏战绩"
        android:textOn="显示战绩"
        />

</RelativeLayout>