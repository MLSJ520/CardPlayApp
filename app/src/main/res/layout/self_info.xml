<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="id:11111111111111111"/>
    <TextView
        android:id="@+id/text_user_phone"
        android:layout_width="wrap_content"
        android:layout_below="@id/text_user_id"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:text="1555586225782222"/>
    <Button
        android:id="@+id/btn_change_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/text_user_phone"
        android:layout_alignBaseline="@id/text_user_phone"
        android:layout_marginLeft="10dp"
        android:text="更换号码"/>
    <Button
        android:id="@+id/btn_logout"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/button_style"
        android:layout_below="@id/text_user_phone"
        android:layout_marginTop="30dp"
        android:text="退出登录"/>


</RelativeLayout>